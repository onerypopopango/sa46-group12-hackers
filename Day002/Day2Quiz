using System;

namespace Day2Workshop
{
    class Day2Quiz
    {
        static void Main()
        {
            Console.Write("Please enter the length in cm: ");
            string cm = Console.ReadLine();

            double cmlength = Double.Parse(cm);
            double inchlength = cmlength / 2.54;
           
            Console.WriteLine("{0:0.000}", inchlength);

        }
    }
}
